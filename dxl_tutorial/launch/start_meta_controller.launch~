<launch>

<!-- Start joint controllers -->
    <rosparam file="$(find dxl_tutorial)/config/controllers.yaml" command="load"/>
    <node name="controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --port dxl_port
                joint1_controller                       
                joint2_controller
                joint3_controller
			 joint4_controller                       
                joint5_controller
                "
          output="screen"/>
          
  <!-- Start joint trajectory controller -->

    <rosparam file="$(find dxl_tutorial)/config/joint_trajectory_controller.yaml" command="load"/>
    <node name="controller_spawner_meta" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --type=meta
                robotic_arm_controller
			 joint1_controller                       
                joint2_controller
                joint3_controller
                joint4_controller
                joint5_controller                               
                "
                
          output="screen"/>
</launch>
